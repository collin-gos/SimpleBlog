<%= link_to "Back", root_path %>

<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<div>
  <%= link_to "Edit", edit_article_path(@article) %>
  <%=
    link_to "Destroy",
    article_path(@article),
    data: {
      turbo_method: :delete,
      turbo_confirm: "Are you sure?"
    }
  %>
</div>

<div>
  <h4>Comments</h4>
  <div>
    <%= render partial: 'comment', collection: @article.comments, as: :comment %>
  </div>

  <%= render "comments/form", article: @article %>

</div>
