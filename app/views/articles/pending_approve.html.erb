<h1>Pending approve</h1>
<div class="container">
  <% @articles&.each do |article| %>
    <div class="border rounded p-2 m-2 flex">
      <p><%= article.title %></p>

      <%= link_to "View article", article_path(article), target: "_blank" %>

      <%= form_with url: approve_article_path(article), method: :post do |f| %>
        <%= f.hidden_field :status, value: 1 %>
        <%= f.submit 'Approve', class: 'btn btn-primary' %>
      <% end %>

      <!-- Rejection Form -->
      <%= form_with url: approve_article_path(article), method: :post do |f| %>
        <%= f.hidden_field :status, value: -1 %>
        <%= f.submit 'Reject', class: 'btn btn-cancle' %>
      <% end %>
    </div>
  <% end %>
</div>
