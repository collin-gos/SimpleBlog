
<%= form_with model: [article, article.comments.build], class: 'form' do |form| %>
  <div class="form-group mb-1">
    <%= form.label :commenter, class: 'form-label' %>
    <%= form.text_field :commenter, class: 'form-control' %>
  </div>
  <div class="form-group mb-1">
    <%= form.label :body, class: 'form-label' %>
    <%= form.text_area :body, class: 'form-control' %>
  </div>
  <div class="form-group mb-1">
    <%= form.label :visible, class: 'form-label' %><br>
    <%= form.select :visible, Visible::VALID_VISIBLE, selected: 'public', class: 'form-select' %>
  </div>
  <div class="form-group mb-1">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
